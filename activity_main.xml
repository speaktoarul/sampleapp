<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#9A0B7C"
    android:padding="10dp"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/t1"
                android:layout_width="wrap_content"
                android:layout_height="150dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView

                        android:layout_width="100dp"
                        android:src="@drawable/logo"
                        android:layout_height="100dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="#FFF"
                        android:textSize="25sp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:text=""
                        android:textColor="#FFF"
                        android:textSize="18sp"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Version 1.0"
                        android:textColor="#FFF"
                        android:textSize="12sp"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#FFF"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:justificationMode="inter_word"
                    android:text="@string/home_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/keralabanner"
                    android:onClick="p7"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="20dp"
                    android:layout_height="300dp" />

            </LinearLayout>

            <com.google.android.gms.ads.AdView android:id="@+id/adView2" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:adSize="LARGE_BANNER" app:adUnitId="@string/admob_banner_id" android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center"
                         android:layout_width="match_parent"
                        android:layout_height="wrap_content" >


                        <LinearLayout
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">


                            <ImageButton
                                android:background="@drawable/b1"
                                android:layout_width="150dp"
                                android:onClick="p1"
                                android:layout_height="150dp"/>
                            <ImageButton
                                android:background="@drawable/b2"
                                android:onClick="p2"
                                android:layout_width="150dp"
                                android:layout_marginLeft="10dp"
                                android:layout_height="150dp"/>

                        </LinearLayout>


                    </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >


                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageButton
                            android:background="@drawable/b3"
                            android:onClick="p3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"/>
                        <ImageButton
                            android:background="@drawable/b4"
                            android:onClick="p4"
                            android:layout_width="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="150dp"/>

                    </LinearLayout>



                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >


                    <LinearLayout
                        android:gravity="center"
                        android:layout_marginBottom="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <ImageButton
                            android:background="@drawable/b5"
                            android:layout_width="150dp"
                            android:onClick="p5"
                            android:layout_height="150dp"/>
                        <ImageButton
                            android:background="@drawable/b6"
                            android:onClick="p6"
                            android:layout_width="150dp"
                            android:layout_marginLeft="10dp"
                            android:layout_height="150dp"/>

                    </LinearLayout>

                </LinearLayout>

                <com.google.android.gms.ads.AdView android:id="@+id/adView1" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:adSize="LARGE_BANNER" app:adUnitId="@string/admob_banner_id" android:layout_marginBottom="10dp"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/tips1"
                        android:onClick="p8"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_height="300dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/tips2"
                        android:onClick="p9"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="300dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/inbox"
                        android:onClick="p10"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="300dp" />

                </LinearLayout>

                <com.google.android.gms.ads.AdView android:id="@+id/adView3" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:adSize="LARGE_BANNER" app:adUnitId="@string/admob_banner_id" android:layout_marginBottom="10dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/update"
                        android:onClick="p11"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_height="300dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/contact"
                        android:onClick="p12"
                        android:layout_width="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="100dp"
                        android:layout_height="300dp" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <com.google.android.gms.ads.AdView android:id="@+id/adView" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true" app:adSize="BANNER" app:adUnitId="@string/admob_banner_id"/>
</RelativeLayout>
